<!DOCTYPE html>
<html lang="en-US">
<body>

    @section scripts
{
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script>

        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(DownloadChartData);

        function DownloadChartData() {
            $.ajax({
                url: '@Url.Action("getMapData", "Information")',
                success: function (response) {
                    ShowChart(response);
                },
                error: function (xhr, status, error) {
                    alert(error);
                }
            });
        };
        function ShowChart(data) {
            var options = {
                title: data.title,
                axisTitlesPosition: "none",
                legend: {
                    position: "none"
                },
                vAxis: {
                    textPosition: "none"
                },
                hAxis: {
                    textPosition: "none"
                }
            };
            var dataTable = new google.visualization.DataTable(data.dataTable);
            var chart = new google.visualization.PieChart(document.getElementById('chart-area'));
            chart.draw(dataTable, options);
            var chart2 = new google.visualization.BarChart(document.getElementById('chart-area2'));
            chart2.draw(dataTable, options);
            var chart3 = new google.visualization.LineChart(document.getElementById('chart-area3'));
            chart3.draw(dataTable, options);
        };
        </script>
    }

